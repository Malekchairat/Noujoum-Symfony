{% extends 'backoffice.html.twig' %}

{% block title %}Wishlist Admin{% endblock %}

{% block head %}
    <style>
        body {
            background-color: #2c2c2c;
            color: #f0f0f0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .wishlist-wrapper {
            margin: 60px auto;
            max-width: 1100px;
            padding: 20px;
        }

        .wishlist-title {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
            color: #d4af37;
        }

        .wishlist-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
        }

        .wishlist-card {
            background-color: #3a3a3a;
            border: 2px solid #d4af37;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }

        .wishlist-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.4);
        }

        .wishlist-card h3 {
            color: #f0f0f0;
            margin-bottom: 10px;
        }

        .wishlist-card p {
            margin: 5px 0;
        }

        .wishlist-card img {
            margin-top: 15px;
            width: 100%;
            max-width: 150px;
            border-radius: 10px;
            border: 2px solid #d4af37;
        }

        .delete-btn {
            background-color: transparent;
            border: 2px solid #ff4d4d;
            color: #ff4d4d;
            padding: 0.4rem 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 30px;
            cursor: pointer;
            margin-top: 15px;
        }

        .delete-btn:hover {
            background-color: #ff4d4d;
            color: #fff;
            transform: scale(1.05);
        }

        .no-favoris {
            text-align: center;
            font-size: 1.2rem;
            color: #ccc;
        }

        .back-btn {
            display: inline-block;
            background-color: #d4af37;
            color: #fff;
            padding: 0.5rem 1.5rem;
            font-weight: bold;
            border-radius: 30px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .back-btn:hover {
            background-color: #b58f2d;
        }
    </style>
{% endblock %}

{% block body %}
<div class="wishlist-wrapper">
    <a href="{{ path('user_list') }}" class="back-btn">Retour</a>
    <h2 class="wishlist-title">Wishlist de {{ user.prenom }} {{ user.nom }}</h2>

    {% if favoris is empty %}
        <p class="no-favoris">Aucun produit ajouté à la wishlist.</p>
    {% else %}
        <div class="wishlist-container">
            {% for favori in favoris %}
                <div class="wishlist-card">
                    <h3>{{ favori.produit ? favori.produit.nom : 'Produit inconnu' }}</h3>
                    <p><strong>Catégorie:</strong> {{ favori.produit and favori.produit.categorie ? favori.produit.categorie : 'Non défini' }}</p>
                    <p><strong>Prix:</strong> {{ favori.produit and favori.produit.prix ? favori.produit.prix : 'Inconnu' }} TND</p>

                    {% if favori.produit and favori.produit.imageName %}
                        <img src="{{ asset('uploads/' ~ favori.produit.imageName) }}" alt="{{ favori.produit.nom }}">
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <form method="post" action="{{ path('favoris_deleteadmin', {'id': favori.idFavoris}) }}" onsubmit="return confirm('Supprimer ce favori ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ favori.idFavoris) }}">
                            <button class="delete-btn" type="submit">Supprimer</button>
                        </form>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
