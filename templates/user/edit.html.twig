{% extends 'backoffice.html.twig' %}

{% block head %}
<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        background-color: #3a3a3a; /* Darker gray background for the page */
        margin: 0;
        padding: 0;
    }

    .form-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background-color: #505050; /* Dark gray for the profile card */
        border: 2px solid #d4af37; /* Thinner gold border around the form */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Finer, shinier effect */
        transition: transform 0.3s ease-in-out; /* Smooth transition for movement */
    }

    .form-container:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4); /* Deeper shadow on hover */
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
        color: #f4f4f4;
        font-weight: 600;
        font-size: 28px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 18px;
        color: #ddd;
        display: inline-block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border-radius: 8px;
        border: 1px solid #ccc;
        background-color: #e6e6e6;
        color: #333;
        box-sizing: border-box;
    }

    .form-group input:focus {
        border-color: #d4af37;
        outline: none;
    }

    .form-button {
        padding: 12px 25px;
        font-size: 16px;
        background-color: #d4af37;
        color: white;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.3s ease;
        margin-top: 20px;
    }

    .form-button:hover {
        background-color: #f4d03f;
        transform: scale(1.05);
    }

    .form-group .form-errors {
        color: #f44336;
        font-size: 14px;
    }
    .cancel-button {
    padding: 12px 25px;
    font-size: 16px;
    background-color: transparent;
    color: #d4af37;
    border: 2px solid #d4af37;
    border-radius: 30px;
    cursor: pointer;
    display: inline-block;
    text-decoration: none;
    text-align: center;
    transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
    margin-top: 20px;
}

.cancel-button:hover {
    background-color: #d4af37;
    color: #000;
    transform: scale(1.05);
}
.action-button {
    padding: 12px 25px;
    font-size: 16px;
    background-color: #d4af37;
    color: white;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    display: inline-block;
    text-align: center;
    text-decoration: none;
    transition: background-color 0.3s ease, transform 0.3s ease;
    margin-top: 20px;
}

.action-button:hover {
    background-color: #f4d03f;
    transform: scale(1.05);
}

</style>
{% endblock %}

{% block body %}
<div class="container form-container">
    <div class="form-header">
        <h1>Modifier l'utilisateur</h1>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group">
            <label for="{{ form.nom.vars.id }}">Nom</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-input'}}) }}
            <div class="form-errors">{{ form_errors(form.nom) }}</div>
        </div>

        <div class="form-group">
            <label for="{{ form.prenom.vars.id }}">Prénom</label>
            {{ form_widget(form.prenom, {'attr': {'class': 'form-input'}}) }}
            <div class="form-errors">{{ form_errors(form.prenom) }}</div>
        </div>

        <div class="form-group">
            <label for="{{ form.email.vars.id }}">Email</label>
            {{ form_widget(form.email, {'attr': {'class': 'form-input'}}) }}
            <div class="form-errors">{{ form_errors(form.email) }}</div>
        </div>

        <div class="form-group">
            <label for="{{ form.mdp.vars.id }}">Mot de passe</label>
            {{ form_widget(form.mdp, {'attr': {'class': 'form-input'}}) }}
            <div class="form-errors">{{ form_errors(form.mdp) }}</div>
        </div>

        <div class="form-group">
            <label for="{{ form.tel.vars.id }}">Téléphone</label>
            {{ form_widget(form.tel, {'attr': {'class': 'form-input'}}) }}
            <div class="form-errors">{{ form_errors(form.tel) }}</div>
        </div>

        <div class="form-group">
            <label for="{{ form.image.vars.id }}">Image</label>
            {{ form_widget(form.image, {'attr': {'class': 'form-input'}}) }}
            <div class="form-errors">{{ form_errors(form.image) }}</div>
        </div>

        {% if form.role is defined %}
            <div class="form-group">
                <label for="{{ form.role.vars.id }}">Rôle</label>
                {{ form_widget(form.role, {'attr': {'class': 'form-input'}}) }}
                <div class="form-errors">{{ form_errors(form.role) }}</div>
            </div>
        {% endif %}

        <div style="display: flex; justify-content: center; gap: 20px; flex-wrap: wrap; margin-top: 30px;">
    <button type="submit" class="action-button">Enregistrer</button>
    <a href="{{ path('user_list') }}" class="action-button">Annuler</a>
</div>


    {{ form_end(form) }}
</div>
{% endblock %}
