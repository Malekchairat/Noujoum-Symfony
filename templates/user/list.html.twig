    .user-navbar .form-select {
        min-width: 150px;
        background-color: #202225;
        border: 1px solid gold;
        color: white;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
        border: 2px solid gold; /* Gold contour restored with a finer 2px border */
    }

    .user-table thead {
        background-color: #202225;
        color: gold;
    }

    .user-table th,
    .user-table td {
        padding: 12px;
        text-align: center;
        border: 1px solid #444;
        vertical-align: middle;
    }

    .user-table tbody tr:nth-child(even) {
        background-color: #2c2e30;
    }

    .user-table tbody tr:nth-child(odd) {
        background-color: #1e1f20;
    }

    .user-table tbody tr:hover {
        background-color: #444; /* Hover effect on rows */
    }

    .badge {
        font-size: 0.85em;
        padding: 5px 10px;
        border-radius: 10px;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 8px;
        flex-wrap: wrap;
    }

