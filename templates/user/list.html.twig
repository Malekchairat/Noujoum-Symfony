        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .user-navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
        background-color: #1e1f20;
        padding: 15px 20px;
        border: 1px solid gold;
        border-radius: 12px;
        margin-bottom: 30px;
    }

    .user-navbar form {
        margin: 0;
