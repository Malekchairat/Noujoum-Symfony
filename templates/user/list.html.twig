{% extends 'backoffice.html.twig' %}

{% block head %}
<style>
    /* Make all text white inside the container */
    .user-list-container,
    .user-list-container * {
        color: white !important;
    }

    .user-list-container {
        max-width: 1200px;
        background-color: #303234;
        border-radius: 15px;
        overflow-x: auto;
        padding: 20px;
    }

    .card-container {
        background-color: #383C40;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .user-navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
        background-color: #1e1f20;
        padding: 15px 20px;
        border: 1px solid gold;
        border-radius: 12px;
        margin-bottom: 30px;
    }

    .user-navbar form {
        margin: 0;
    }

    .user-navbar .form-select {
        min-width: 150px;
        background-color: #202225;
        border: 1px solid gold;
        color: white;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
        border: 2px solid gold;
    }

    .user-table thead {
        background-color: #202225;
        color: gold;
    }

    .user-table th,
    .user-table td {
        padding: 12px;
        text-align: center;
        border: 1px solid #444;
        vertical-align: middle;
    }

    .user-table tbody tr:nth-child(even) {
        background-color: #2c2e30;
    }

    .user-table tbody tr:nth-child(odd) {
        background-color: #1e1f20;
    }

    .user-table tbody tr:hover {
        background-color: #444;
    }

    .badge {
        font-size: 0.85em;
        padding: 5px 10px;
        border-radius: 10px;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 8px;
        flex-wrap: wrap;
    }

    .action-buttons .btn,
    .user-navbar a {
        font-size: 0.8rem;
        padding: 6px 12px;
        border: 1px solid gold;
        background-color: transparent;
        transition: background-color 0.3s ease, color 0.3s ease;
        text-decoration: none;
        border-radius: 6px;
    }

    .btn-outline-warning {
        color: gold;
    }

    .btn-outline-warning:hover {
        background-color: gold;
        color: black;
    }

    .btn-danger {
        color: white;
        background-color: #dc3545;
        border: none;
    }

    .btn-danger:hover {
        background-color: #b02a37;
    }

    .btn-outline-info {
        color: #17a2b8;
        border: 1px solid #17a2b8;
    }

    .btn-outline-info:hover {
        background-color: #17a2b8;
        color: white;
    }

    .btn-outline-success {
        color: gold;
        border: 1px solid gold;
    }

    .btn-outline-success:hover {
        background-color: gold;
        color: black;
    }

    .btn-outline-light {
        color: white;
        border: 1px solid white;
    }

    .btn-outline-light:hover {
        background-color: white;
        color: black;
    }

    .user-photo {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid gold;
        transition: transform 0.3s ease;
    }

    .user-photo:hover {
        transform: scale(1.1);
        border-color: #f4d03f;
    }

    /* Search container */
    .search-container {
        flex-grow: 1;
        max-width: 300px;
    }

    .search-container input {
        width: 100%;
        padding: 8px 15px;
        border-radius: 6px;
        background-color: #202225;
        border: 1px solid gold;
        color: white;
    }

    /* Pagination styling */
    .pagination {
        display: flex;
        gap: 8px;
        list-style: none;
        padding: 10px 0;
        justify-content: center;
    }

    .pagination li a,
    .pagination li span {
        color: gold;
        border: 1px solid gold;
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color .3s, color .3s;
    }

    .pagination li a:hover {
        background-color: gold;
        color: black;
    }

    .pagination li.active span {
        background-color: gold;
        color: black;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .user-list-container {
            padding: 20px;
        }

        .user-navbar {
            flex-direction: column;
            align-items: stretch;
        }

        .user-navbar a,
        .user-navbar form,
        .search-container {
            width: 100%;
            max-width: 100%;
        }

        .user-table th,
        .user-table td {
            padding: 8px;
        }

        .action-buttons .btn {
            font-size: 0.75rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="user-list-container">
    <h2 class="text-center mb-4" style="color: white;">ðŸ‘¥ Liste des Utilisateurs</h2>

    <div class="user-navbar">
        <a href="{{ path('user_create') }}" class="btn btn-outline-success">âž• Ajouter un utilisateur</a>

        <form method="get" action="{{ path('user_list') }}" class="d-flex align-items-center">
            <label for="role" class="me-2">Filtrer par rÃ´le :</label>
            <select name="role" id="role" onchange="this.form.submit()" class="form-select w-auto">
                <option value="">Tous</option>
                <option value="ROLE_ADMIN" {% if currentRole == 'ROLE_ADMIN' %}selected{% endif %}>Admin</option>
                <option value="ROLE_USER" {% if currentRole == 'ROLE_USER' %}selected{% endif %}>Fan</option>
            </select>
        </form>

        <div class="search-container">
            <input type="text" id="userSearch" class="form-control" placeholder="Rechercher par nom ou prÃ©nom..." 
                   value="{{ app.request.query.get('search', '') }}">
        </div>

        <a href="{{ path('user_list_pdf', {role: currentRole}) }}" class="btn btn-outline-light">ðŸ“„ TÃ©lÃ©charger PDF</a>
    </div>

    <table class="user-table">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Nom</th>
                <th>Email</th>
                <th>TÃ©lÃ©phone</th>
                <th>RÃ´le</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="userTableBody">
            {% for user in users %}
                <tr>
                    <td>
                        <img src="{{ asset(user.image ? 'uploads/' ~ user.image : 'uploads/user.png') }}"
                             alt="Photo de {{ user.prenom }}"
                             class="user-photo">
                    </td>
                    <td>{{ user.prenom }} {{ user.nom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.tel }}</td>
                    <td>
                        {% if user.role.value == 'ROLE_ADMIN' %}
                            <span class="badge bg-warning text-dark">Admin</span>
                        {% elseif user.role.value == 'ROLE_USER' %}
                            <span class="badge bg-info text-dark">Fan</span>
                        {% else %}
                            <span class="badge bg-secondary">Inconnu</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a href="{{ path('user_edit', {id: user.getIdUser()}) }}" class="btn btn-outline-warning">Modifier</a>
                            <form method="post"
                                  action="{{ path('user_delete', {id: user.getIdUser()}) }}"
                                  onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cet utilisateur ?');"
                                  style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.getIdUser()) }}">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>
                            {% if user.role.value == 'ROLE_USER' %}
                                <a href="{{ path('user_wishlist', {id: user.getIdUser()}) }}"
                                   class="btn btn-outline-success">Voir la Wishlist</a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun utilisateur trouvÃ©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(users) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('userSearch');
        const roleSelect = document.getElementById('role');

        function fetchUsers() {
            const searchTerm = searchInput.value.trim();
            const role = roleSelect.value;

            fetch(`{{ path('user_search') }}?term=${encodeURIComponent(searchTerm)}&role=${encodeURIComponent(role)}`)
                .then(response => response.json())
                .then(users => {
                    const tbody = document.getElementById('userTableBody');
                    tbody.innerHTML = '';

                    if (users.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="6">Aucun utilisateur trouvÃ©.</td></tr>';
                        return;
                    }

                    users.forEach(user => {
                        const tr = document.createElement('tr');

                        const roles = user.roles.map(role => `<span class="badge bg-secondary">${role}</span>`).join(' ');

                        tr.innerHTML = `
                            <td>
                                <img src="${user.image ? '/uploads/' + user.image : '/uploads/user.png'}" alt="Photo de ${user.prenom}" class="user-photo">
                            </td>
                            <td>${user.prenom} ${user.nom}</td>
                            <td>${user.email}</td>
                            <td>${user.tel}</td>
                            <td>${roles}</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/user/${user.id}/edit" class="btn btn-outline-warning">Modifier</a>
                                    <form method="post" action="/user/delete/${user.id}" onsubmit="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cet utilisateur ?');">
                                        <input type="hidden" name="_token" value="${user.csrfToken}">
                                        <button class="btn btn-danger">Supprimer</button>
                                    </form>
                                    ${user.roles.includes('ROLE_USER') ? `<a href="/user/wishlist/${user.id}" class="btn btn-outline-success">Voir la Wishlist</a>` : ''}
                                </div>
                            </td>
                        `;

                        tbody.appendChild(tr);
                    });
                })
                .catch(error => console.error('Erreur:', error));
        }

        searchInput.addEventListener('input', function() {
            if (this.value.length >= 2 || this.value.length === 0) {
                fetchUsers();
            }
        });

        roleSelect.addEventListener('change', fetchUsers);
    });
</script>
{% endblock %}