{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #2c2c2c;
            color: #f0f0f0;
        }

        .form-container {
            margin-top: 60px;
            display: flex;
            justify-content: center;
        }

        .card {
            background-color: #3a3a3a;
            border: 2px solid #d4af37;
            border-radius: 15px;
            padding: 40px;
            width: 100%;
            max-width: 600px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.4);
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 600;
            font-size: 28px;
            color: #f0f0f0;
        }

        .alert-warning {
            background-color: #ffc107;
            color: #000;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-weight: 500;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #ddd;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 8px;
            border: 1px solid #ccc;
            background-color: #e6e6e6;
            color: #333;
        }

        .form-input:focus {
            border-color: #d4af37;
            outline: none;
        }

        .form-errors {
            color: #ff4d4d;
            font-size: 14px;
        }

        .custom-btn {
            background-color: transparent;
            border: 2px solid #d4af37;
            color: #d4af37;
            padding: 0.5rem 1.2rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 30px;
        }

        .custom-btn:hover {
            background-color: #d4af37;
            color: #000;
            transform: scale(1.05);
        }

        .custom-btn.danger {
            border-color: #ff4d4d;
            color: #ff4d4d;
            margin-top: 20px;
        }

        .custom-btn.danger:hover {
            background-color: #ff4d4d;
            color: #fff;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
            flex-wrap: wrap;
        }
        .custom-btn {
    background-color: transparent;
    border: 2px solid #d4af37;
    color: #d4af37;
    padding: 0.5rem 1.2rem;
    font-weight: 500;
    transition: all 0.3s ease;
    border-radius: 30px;
    text-decoration: none; /* ⬅️ This removes the underline */
    display: inline-block;  /* ⬅️ Makes sure anchor looks like a button */
}

    </style>
{% endblock %}

{% block title %}Modifier le compte{% endblock %}

{% block body %}
<div class="container form-container">
    <div class="card">
        <div class="form-header">Modifier le compte</div>

        {% if is_self is defined and is_self %}
            <div class="alert alert-warning">
                Vous modifiez votre propre compte. Soyez prudent !
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="{{ form.nom.vars.id }}">Nom</label>
                {{ form_widget(form.nom, {'attr': {'class': 'form-input'}}) }}
                <div class="form-errors">{{ form_errors(form.nom) }}</div>
            </div>

            <div class="form-group">
                <label for="{{ form.prenom.vars.id }}">Prénom</label>
                {{ form_widget(form.prenom, {'attr': {'class': 'form-input'}}) }}
                <div class="form-errors">{{ form_errors(form.prenom) }}</div>
            </div>

            <div class="form-group">
                <label for="{{ form.email.vars.id }}">Email</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-input'}}) }}
                <div class="form-errors">{{ form_errors(form.email) }}</div>
            </div>

            <div class="form-group">
                <label for="{{ form.mdp.vars.id }}">Mot de passe (laissez vide pour ne pas changer)</label>
                {{ form_widget(form.mdp, {'attr': {'class': 'form-input'}}) }}
                <div class="form-errors">{{ form_errors(form.mdp) }}</div>
            </div>

            <div class="form-group">
                <label for="{{ form.tel.vars.id }}">Téléphone</label>
                {{ form_widget(form.tel, {'attr': {'class': 'form-input'}}) }}
                <div class="form-errors">{{ form_errors(form.tel) }}</div>
            </div>

            <div class="form-group">
                <label for="{{ form.image.vars.id }}">Image</label>
                {{ form_widget(form.image, {'attr': {'class': 'form-input'}}) }}
                <div class="form-errors">{{ form_errors(form.image) }}</div>
            </div>

            <div class="btn-container">
    <button type="submit" class="custom-btn">
        <i class="fas fa-save"></i> Enregistrer
    </button>

    <a href="{{ path('app_profile') }}" class="custom-btn">
        <i class="fas fa-times"></i> Annuler
    </a>
</div>

        {{ form_end(form) }}

        {% if is_self is defined and is_self %}
            <form action="{{ path('user_delete', {'id': app.user.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');" class="text-center">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="custom-btn danger">
                    <i class="fas fa-user-slash"></i> Supprimer mon compte
                </button>
            </form>
        {% endif %}
    </div>
</div>
{% endblock %}
