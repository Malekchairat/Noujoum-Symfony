{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        body {
            background-color: #2c2c2c;
            color: #f0f0f0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .profile-container {
            margin-top: 60px;
            display: flex;
            justify-content: center;
        }

        .card {
            background-color: #3a3a3a;
            border: 2px solid #d4af37;
            border-radius: 15px;
            padding: 40px;
            width: 100%;
            max-width: 600px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.4);
        }

        .profile-header .profile-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid #d4af37;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .profile-header .profile-image:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px #d4af37;
        }

        .profile-name {
            font-size: 1.8rem;
            font-weight: bold;
            color: #f0f0f0;
        }

        .profile-role {
            font-size: 1rem;
            margin-top: 5px;
            color: #ccc;
        }

        .info-section {
            margin-top: 30px;
        }

        .info-section p {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .custom-btn {
            background-color: transparent;
            border: 2px solid #d4af37;
            color: #d4af37;
            padding: 0.5rem 1.2rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 30px;
        }

        .custom-btn:hover {
            background-color: #d4af37;
            color: #000;
            transform: scale(1.05);
        }

        .custom-btn.danger {
            border-color: #ff4d4d;
            color: #ff4d4d;
        }

        .custom-btn.danger:hover {
            background-color: #ff4d4d;
            color: #fff;
        }

        .actions {
            margin-top: 30px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .alert {
            color: #fff;
            background-color: #a94442;
            border: none;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container profile-container">
    <div class="card text-center">
        {% if error %}
            <div class="alert alert-danger">{{ error }}</div>
        {% elseif user %}
            <div class="profile-header mb-4">
                {% if user.image %}
                    <img src="{{ asset('uploads/' ~ user.image) }}" alt="Photo de profil" class="profile-image">
                {% else %}
                    <img src="{{ asset('uploads/user.png') }}" alt="Photo de profil par défaut" class="profile-image">
                {% endif %}
                <h2 class="profile-name mt-3">{{ user.prenom }} {{ user.nom }}</h2>
                <div class="profile-role">
                    {% if 'ROLE_ADMIN' in user.roles %}
                        Admin
                    {% elseif 'ROLE_USER' in user.roles %}
                        Fan
                    {% elseif 'ROLE_ARTIST' in user.roles %}
                        Artiste
                    {% else %}
                        Inconnu
                    {% endif %}
                </div>
            </div>

            <div class="info-section mb-4">
                <p><strong>Email :</strong> {{ user.email }}</p>
                <p><strong>Téléphone :</strong> {{ user.tel }}</p>
                <p><strong>Adresse :</strong> Esprit bloc IJK</p>
            </div>

            <div class="actions">
                <a href="{{ path('user_modifier', {'id': user.idUser}) }}" class="btn custom-btn">
                    <i class="fas fa-edit"></i> Modifier le compte
                </a>

                <form method="post" action="{{ path('user_delete_self') }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
                    <button type="submit" class="btn custom-btn danger">
                        <i class="fas fa-user-slash"></i> Supprimer mon compte
                    </button>
                </form>

                <form method="post" action="{{ path('app_logout') }}" class="d-inline">
                    <button type="submit" class="btn custom-btn">
                        <i class="fas fa-sign-out-alt"></i> Se déconnecter
                    </button>
                </form>
            </div>
        {% else %}
            <div class="text-center text-light">Aucun utilisateur trouvé.</div>
        {% endif %}
    </div>
</div>
{% endblock %}
