{# templates/registration/register.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Inscription | Noujoum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #000;
            background-image: url('/images/stars-bg.svg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: 'Playfair Display', serif;
            color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-container {
            position: relative;
            background: #121212;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(255, 215, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }
        .form-container::before {
            content: '';
            position: absolute;
            top: -2px; left: -2px; right: -2px; bottom: -2px;
            z-index: -1;
            border-radius: 14px;
            background: linear-gradient(45deg, #FFD700, #e6c200);
        }

        .form-container h2 {
            color: #FFD700;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-control,
        .form-control-file {
            background-color: #1e1e1e;
            border: 1px solid #444;
            color: #fff;
            transition: all 0.3s ease;
            border-radius: 5px;
        }
        .form-control:focus {
            border-color: #FFD700;
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
        }

        label {
            color: #ccc;
            font-weight: 500;
        }

        .btn-gold {
            background-color: #FFD700;
            color: #000;
            border: none;
            width: 100%;
            padding: 10px;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .btn-gold:hover {
            background-color: #e6c200;
            transform: scale(1.03);
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1055;
        }
    </style>
</head>
<body>

<div class="toast-container">
  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="toast align-items-center text-white bg-{{ label == 'success' ? 'success' : 'danger' }} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body">
            {{ message }}
          </div>
          <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
    {% endfor %}
  {% endfor %}
</div>

<div class="form-container">
  <center>
    <img src="/images/njmlogo.jpg" alt="Noujoum Logo" style="width: 80px; margin-bottom: 15px;">
    <h2>Inscription</h2>
  </center>

  {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
      <div class="mb-3">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
        <div class="text-danger">{{ form_errors(form.nom) }}</div>
      </div>

      <div class="mb-3">
        {{ form_label(form.prenom) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
        <div class="text-danger">{{ form_errors(form.prenom) }}</div>
      </div>

      <div class="mb-3">
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        <div class="text-danger">{{ form_errors(form.email) }}</div>
      </div>

      <div class="mb-3">
        {{ form_label(form.mdp) }}
        {{ form_widget(form.mdp, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
        <div class="text-danger">{{ form_errors(form.mdp) }}</div>
      </div>

      <div class="mb-3">
        {{ form_label(form.tel) }}
        {{ form_widget(form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
        <div class="text-danger">{{ form_errors(form.tel) }}</div>
      </div>

      <div class="mb-3">
        {{ form_label(form.image) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
        <div class="text-danger">{{ form_errors(form.image) }}</div>
      </div>

      {{ form_widget(form._token) }}

      <div class="d-grid">
        <button class="btn-gold mt-3">
          {{ button_label|default('S’inscrire') }}
        </button>
      </div>
  {{ form_end(form) }}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.querySelectorAll('.toast').forEach(el => new bootstrap.Toast(el).show());
</script>
</body>
</html>
