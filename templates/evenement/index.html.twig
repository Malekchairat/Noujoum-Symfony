        }
        .filter-navbar a.active {
            border-bottom: 2px solid gold;
        }
        /* Search bar styles */
        .search-bar {
            display: flex;
            align-items: center;
        }
        .search-bar input[type="text"] {
            padding: 8px 10px;
            border-radius: 5px;
            border: 1px solid gold;
            background: transparent;
            color: #f9fafb;
        }
        .search-bar input[type="text"]::placeholder {
            color: #ccc;
        }
        .search-bar button {
            padding: 8px 12px;
            margin-left: 5px;
            border: 1px solid gold;
            border-radius: 5px;
            background: transparent;
            color: gold;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s ease;
        }
        .search-bar button:hover {
            background: gold;
            color: black;
        }
        /* Event card styling */
        .event-card {
            width: 350px;
            background-color: black;
            border: 2px solid gold;
            color: white;
            border-radius: 10px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }
        .event-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            display: block;
        }
        .event-card .content {
            padding: 15px;
            text-align: left;
        }
        .event-card h5 {
            margin-bottom: 10px;
            color: gold;
        }
        .event-card p {
            margin-bottom: 5px;
        }
        .event-card .reserve-container {
            text-align: center;
            margin-top: 10px;
        }
        .open-ticket {
            background-color: gold;
            color: black;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
        }
        /* Modal styles */
        #ticketModal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }
        .share-btn {
            display: inline-block;
            background-color: #3b5998;
            color: white;
            padding: 8px 12px;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }
        .share-btn:hover {
            background-color: #2d4373;
        }
        #ticketModal .modal-content {
            background-color: black;
            color: white;
            border: 2px solid gold;
            padding: 20px;
            width: 320px;
            border-radius: 10px;
            position: relative;
        }
        #ticketModal .close {
            position: absolute;
            top: 10px;
            right: 15px;
            cursor: pointer;
            font-size: 1.5em;
        }
        .ticket-input {
            background-color: black;
            color: white;
            border: 1px solid gold;
            padding: 5px;
            width: 100%;
            margin-bottom: 10px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
    </style>

