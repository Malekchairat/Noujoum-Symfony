{% block body %}
    <style>
        /* Set page background */
        body {
            background-color: #303234;
        }
        /* Header styling for title and button */
        .header-container {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            margin-bottom: 30px;
        }
