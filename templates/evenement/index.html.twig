    <script>
        // Modal logic
        var modal = document.getElementById('ticketModal');
        var closeModal = document.querySelector('#ticketModal .close');
        var ticketQuantite = document.getElementById('quantite');
        var totalDisplay = document.getElementById('total_display');
        var eventPrice = 0;

        function updateTotal() {
            var quantity = parseInt(ticketQuantite.value) || 1;
            totalDisplay.innerText = (quantity * eventPrice).toFixed(2) + " TND";
        }
        ticketQuantite.addEventListener('input', updateTotal);

        document.querySelectorAll('.open-ticket').forEach(function(button) {
