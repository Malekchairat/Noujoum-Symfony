{% extends 'backoffice.html.twig' %}

{% block title %}Evenements Expirés{% endblock %}

{% block body %}
<div class="text-end" style="margin-bottom:40px;">
  <a href="{{ path('evenement_EvenementBack') }}" class="gold-button">🔙 Retour</a>
</div>

<div style="display:flex;flex-wrap:wrap;gap:20px;justify-content:center;">
  {% for e in evenements %}
    <div class="event-card" style="width:350px;background:black;border:2px solid gold;color:white;border-radius:10px;overflow:hidden;display:flex;flex-direction:column;">
      {% if e.image %}
        <img src="{{ asset('uploads/'~e.image) }}" alt="{{ e.Titre }}" style="width:100%;height:180px;object-fit:cover;">
      {% endif %}
      <div style="padding:15px;">
        <h5 style="margin-bottom:10px;color:gold;">🎫 {{ e.Titre }}</h5>
        <p>📅 <strong>Date:</strong> {{ e.dateDebut|date('Y-m-d') }} → {{ e.dateFin|date('Y-m-d') }}</p>
        <p>📍 <strong>Lieu:</strong> {{ e.Lieu }}</p>
        <div style="margin-top:15px;display:flex;justify-content:center;">
          <a href="{{ path('evenement_duplicate', {id: e.id}) }}" class="edit-button">Dupliquer</a>
        </div>
      </div>
    </div>
  {% else %}
    <p class="text-center text-white">Aucun événement expiré trouvé.</p>
  {% endfor %}
</div>
{% endblock %}