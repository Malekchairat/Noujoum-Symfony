{% extends 'backoffice.html.twig' %}

{% block title %}Modifier Ticket #{{ ticket.id }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #000; /* Black background */
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(255, 215, 0, 0.5); /* Gold-ish shadow */
            text-align: left; /* Left-align content */
            color: #fff; /* White text */
        }
        .edit-container h1 {
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: #fff;
        }
        .edit-container .form-group {
            margin-bottom: 20px;
        }
        .edit-container label {
            color: #fff;
        }
        .edit-container input,
        .edit-container select,
        .edit-container textarea {
            background-color: #333;
            border: 1px solid #555;
            color: #fff;
            padding: 10px;
            border-radius: 4px;
            width: 100%;
        }
        .edit-container button {
            font-size: 1.2rem;
            padding: 10px 25px;
            background-color: #FFD700; /* Gold button */
            border: none;
            border-radius: 4px;
            color: #000; /* Black text for contrast */
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .edit-container button:hover {
            background-color: #e6c200;
        }
        .back-link {
            display: block;
            margin-top: 30px;
            font-size: 1.1rem;
            color: #FFD700; /* Gold for the link */
            text-decoration: none;
        }
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="edit-container">
    <h1>Modifier Ticket #{{ ticket.id }}</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.quantite) }}
        </div>
        <div class="form-group">
            {{ form_row(form.methodePaiement) }}
        </div>
        <div class="form-group">
            <button class="btn btn-success">Enregistrer</button>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('ticket_back') }}" class="back-link">← Retour à la gestion des tickets</a>
</div>
{% endblock %}