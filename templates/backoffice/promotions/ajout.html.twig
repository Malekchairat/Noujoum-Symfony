{% extends 'backoffice.html.twig' %}

{% block title %}Ajouter une promotion{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter une promotion pour {{ produit.nom }}</h1>
    
    {{ form_start(form) }}
        {{ form_row(form.code) }}
        {{ form_row(form.pourcentage) }}
        {{ form_row(form.expiration) }}
        
        <div class="mt-3">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Enregistrer
            </button>
<a href="{{ path('produits_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}