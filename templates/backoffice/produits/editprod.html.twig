
{% extends 'backoffice.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/modif.css') }}">
{% endblock %}
{% block body %}
<style>
    body { background-color: red !important; }
</style>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="d-flex flex-column flex-md-row bg-white shadow rounded-4 p-4">
                <!-- Image du produit à gauche -->
                <div class="flex-shrink-0 me-md-4 mb-3 mb-md-0 text-center">
                    {% if produit.imageName %}
                        <img src="{{ asset('uploads/' ~ produit.imageName) }}" 
                             class="img-fluid rounded-3 shadow-sm" 
                             style="max-width: 100%; max-height: 400px; object-fit: cover;">
                        <small class="text-muted d-block mt-2">Fichier: {{ produit.imageName }}</small>
                    {% else %}
                        <img src="https://via.placeholder.com/400x400" 
                             class="img-fluid rounded-3 shadow-sm" 
                             alt="Image par défaut">
                    {% endif %}
                </div>

                <!-- Formulaire à droite -->
                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="h4 mb-0">
                            <i class="fas fa-edit me-2"></i>Modifier le produit
                        </h2>
                        <a href="{{ path('produits_index') }}" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Retour
                        </a>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row g-3">
                        <!-- Nom -->
                        <div class="col-md-6">
                            {{ form_row(form.nom, {
                                'attr': {'class': 'form-control rounded-3'},
                                'label_attr': {'class': 'form-label fw-semibold'}
                            }) }}
                        </div>
                        
                        <!-- Prix -->
                        <div class="col-md-6">
                            {{ form_row(form.prix, {
                                'attr': {'class': 'form-control rounded-3'},
                                'label_attr': {'class': 'form-label fw-semibold'}
                            }) }}
                        </div>
                        
                        <!-- Catégorie -->
                        <div class="col-md-6">
                            {{ form_row(form.categorie, {
                                'attr': {'class': 'form-select rounded-3'},
                                'label_attr': {'class': 'form-label fw-semibold'}
                            }) }}
                        </div>
                        
                        <!-- Description -->
                        <div class="col-12">
                            {{ form_row(form.description, {
                                'attr': {
                                    'class': 'form-control rounded-3',
                                    'rows': 4,
                                    'style': 'min-height: 120px;'
                                },
                                'label_attr': {'class': 'form-label fw-semibold'}
                            }) }}
                        </div>
                        
                        <!-- Image -->
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <div class="me-3 flex-grow-1">
                                    {{ form_row(form.image, {
                                        'attr': {'class': 'form-control'},
                                        'label_attr': {'class': 'form-label fw-semibold'},
                                        'help_attr': {'class': 'form-text text-muted small'},
                                        'help': 'Laissez vide pour conserver l\'image actuelle. Formats acceptés: JPG, PNG (max 2MB)'
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <!-- Boutons -->
                        <div class="col-12 mt-4">
                            <div class="d-flex justify-content-end gap-4">
                                <button type="submit" class="btn btn-primary btn-lg px-5 py-2">
                                    <i class="fas fa-save me-2"></i> Enregistrer
                                </button>
                                <a href="{{ path('produits_index') }}" class="btn btn-outline-secondary btn-lg px-5 py-2">
                                    <i class="fas fa-times me-2"></i> Annuler
                                </a>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}