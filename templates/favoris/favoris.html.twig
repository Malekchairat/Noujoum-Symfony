{% extends 'base.html.twig' %}

{% block title %}Mes Favoris{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #2c2c2c;
            color: #f0f0f0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .favoris-container {
            margin: 60px auto;
            max-width: 1000px;
            padding: 20px;
        }

        .favoris-title {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
            color: #d4af37;
        }

        .produits {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
        }

        .produit {
            background-color: #3a3a3a;
            border: 2px solid #d4af37;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }

        .produit:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.4);
        }

        .produit h3 {
            color: #f0f0f0;
            margin-bottom: 10px;
        }

        .produit p {
            margin: 5px 0;
        }

        .produit img {
            margin-top: 15px;
            width: 100%;
            max-width: 150px;
            border-radius: 10px;
            border: 2px solid #d4af37;
        }

        .no-favoris {
            text-align: center;
            font-size: 1.2rem;
            color: #ccc;
        }
    </style>
{% endblock %}

{% block body %}
<div class="favoris-container">
    <h1 class="favoris-title">Mes Produits Favoris</h1>

    {% if favoris is empty %}
        <p class="no-favoris">Vous n'avez aucun produit en favoris.</p>
    {% else %}
        <div class="produits">
            {% for favori in favoris %}
                <div class="produit">
                    <h3>{{ favori.produit.nom }}</h3>
                    <p>{{ favori.produit.description }}</p>
                    <p>Prix : {{ favori.produit.prix }} TND</p>
                    {% if favori.produit.imageName %}
                        <img src="{{ asset('uploads/' ~ favori.produit.imageName) }}" alt="{{ favori.produit.nom }}">
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
