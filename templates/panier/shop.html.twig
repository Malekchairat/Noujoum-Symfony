{% extends 'base.html.twig' %}

{% block title %} Shop - Noujoum {% endblock %}

{% set shop_active = 'active' %}

{% block body %}

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop the Hottest Fan Merch! üõçÔ∏è</h1>
                    <p>Get exclusive concert merch, artist-inspired fashion, and must-have collectibles. Limited editions available‚Äîgrab yours before they‚Äôre gone!</p>
                    <a href="#shop" class="btn btn-warning">Browse Collection</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            {% for produit in produits %}
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" href="#">
                        <img src="{{ asset('images/' ~ produit.image) }}" class="img-fluid product-thumbnail">
                        <h3 class="product-title">{{ produit.nom }}</h3>
                        <strong class="product-price">${{ produit.prix }}</strong>

                        <span class="icon-cross">
                            <img src="{{ asset('images/cross.svg') }}" class="img-fluid">
                        </span>
                    </a>
                </div>
            {% else %}
                <p class="text-center">No products available.</p>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
